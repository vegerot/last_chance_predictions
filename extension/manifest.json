{
  "manifest_version": 3,
  "name": "final fate",
  "description": "stupid name",
  "version": "1.0",
  "action": {
    "default_popup": "final_fate.html",
    "default_icon": "final_fate.png"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "webNavigation",
    "webRequest"
  ],
  "background": {
    "scripts": ["final_fate_service_worker.mjs"],
    "service_worker": "final_fate_service_worker.mjs",
    "type": "module",
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "https://twitch.tv/*",
        "https://gql.twitch.tv/*",
        "https://www.twitch.tv/*",
        "https://www.twitch.tv/hi"
      ],
      "js": [
        "scripts/final_fate_content_script.js",
        "scripts/final_fate_popup_script.js"
      ]
    }
  ]
}
